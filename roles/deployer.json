{
  "name": "deployer",
  "description": "setup deployer server environment for rails deployment",
  "json_class": "Chef::Role",
  "default_attributes": {
    "authorization": {
      "sudo": {
        "groups": ["deployers"],
        "users": ["deployer"],
        "passwordless": "true"
      }
    }
  },
  "override_attributes": {
    "rbenv_install_rubies": {
      "global_version": "2.3.0",
      "gems": ["bundler", "rbenv-rehash", "pry", {"rails": {"version": "4.2.0"}}],
      "lib_packages": [
                        "nodejs", "nginx", "vim", "postgresql", "libpq-dev", "libmysqlclient-dev", "libsqlite3-dev", "sqlite3"
                      ]
    },
    "postgresql":{
      "username":{
        "postgres": "deployer"
      },
      "password":{
        "postgres": "dpGV7gVtyFWP4xSwtx04i1f26P1KduthSO4e4cSRSEU="
      }
    }
  },
  "chef_type": "role",
  "run_list": [
    "recipe[rbenv]",
    "recipe[rbenv-install-rubies]",
    "recipe[sudo]",
    "role[deployer]",
    "recipe[apt-sources-switch]",
    "recipe[custom::default]",
    "recipe[custom::deployer]"
  ],
  "env_run_lists": {

  }
}
