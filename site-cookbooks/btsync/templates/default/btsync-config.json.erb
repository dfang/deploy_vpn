{
  "device_name": "<%= @config['device_name'] %>",
  "listening_port": <%= @config['listening_port'] %>, // 0 - randomize port
  "storage_path": "<%= @config['storage_path'] %>",
  "pid_file" : "/var/run/btsync.pid",
  "use_upnp": <%= @config['use_upnp'] %>, // use UPnP for port mapping

  "download_limit": <%= @config['download_limit'] %>, // limits in kB/s. 0 - no limit
  "upload_limit": <%= @config['upload_limit'] %>,

  /* storage_path dir contains auxilliary app files if no storage_path field: .sync dir created in the directory
   where binary is located. otherwise user-defined directory will be used */
// "storage_path" : "/home/user/.sync",

  "disk_low_priority": <%= @config['disk_low_priority'] %>,
  "folder_rescan_interval": <%= @config['folder_rescan_interval'] %>,

  "directory_root" : "/mnt/", // directory_root path defines where the WebUI Folder browser starts (linux only). Default value is /


/* proxy configuration */
